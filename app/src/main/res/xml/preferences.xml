        <Preference
            android:key="@string/pref_confirm_mm_payment_key"
            android:title="@string/pref_confirm_mm_payment_title" >
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_general">
        <Preference
            android:key="@string/pref_privacy_policy_key"
            android:title="@string/pref_privacy_policy_title" >
        </Preference>

        <Preference
            android:key="@string/pref_sign_out_key"
            android:title="@string/pref_sign_out_title" >
        </Preference>
        <Preference
            android:key="@string/pref_app_version_key"
            android:summary=""
            android:title="@string/pref_app_version_title" >
        </Preference>
    </PreferenceCategory>

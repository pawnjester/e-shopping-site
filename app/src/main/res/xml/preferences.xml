            android:key="@string/pref_turn_on_loyalty_programs_key"
            android:title="@string/pref_turn_on_loyalty_programs_title"
            android:defaultValue="true"
            android:summary="" />
        <Preference
            android:key="@string/pref_setup_loyalty_programs_key"
            android:title="@string/pref_setup_loyalty_programs_title" />
        <Preference
            android:key="@string/pref_setup_birthday_offer_key"
            android:title="@string/pref_setup_birthday_offer_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_account_title">
        <Preference
            android:key="@string/pref_account_status_key"
            android:summary=""
            android:title="@string/pref_account_status_title"/>
        <Preference
            android:key="@string/pref_edit_account_key"
            android:title="@string/pref_edit_account_title" >

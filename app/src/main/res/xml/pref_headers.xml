<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- These settings headers are only used on tablets. -->

    <header
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$AccountPreferenceFragment"
        android:icon="@drawable/ic_account_circle_black_24px"
        android:title="@string/account">
    </header>

    <header
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$ProductsAndServices"
        android:icon="@drawable/ic_shopping_cart_black_24px"
        android:title="@string/my_products_and_services">
    </header>

    <header
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$GeneralPreferenceFragment"
        android:icon="@drawable/ic_info_black_24dp"
        android:title="@string/pref_header_general" />

    <header
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$NotificationPreferenceFragment"
        android:icon="@drawable/ic_notifications_black_24dp"
        android:title="@string/pref_header_notifications" />

    <header
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$DataSyncPreferenceFragment"
        android:icon="@drawable/ic_sync_black_24dp"
        android:title="@string/pref_header_data_sync" />

    <header
        android:id="@+id/loystar_support_pref_header"
        android:fragment="co.loystar.loystarbusiness.activities.SettingsActivity$GeneralPreferenceFragment"
        android:icon="@drawable/ic_customer_support"
        android:title="@string/pref_support_title">
        <extra android:name="settings" android:value="@string/pref_support_key" />
    </header>

</preference-headers>

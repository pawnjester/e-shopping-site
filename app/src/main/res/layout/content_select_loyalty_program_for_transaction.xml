<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext=".activities.SelectLoyaltyProgramForSales"
    tools:showIn="@layout/activity_select_loyalty_program_for_sales"
    android:background="@color/colorPrimaryDarker">

    <co.loystar.loystarbusiness.utils.ui.RecyclerViewOverrides.EmptyRecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/rvChooseProgram"
        android:scrollbars="vertical" />

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone"
        android:id="@+id/select_program_empty_container"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/no_loyalty_programs"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <co.loystar.loystarbusiness.utils.ui.Buttons.BrandButtonNormal
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/select_program_empty_add_program"
            android:text="@string/create_program"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>

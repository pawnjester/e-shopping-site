<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:mContext=".fragments.MerchantLoyaltyProgramDetailFragment"
    android:id="@+id/create_raffle_program_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/program_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:hint="@string/name_of_raffle_draw"
                android:inputType="textCapWords"
                android:id="@+id/raffle_draw_name"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/msg_box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:hint="@string/raffle_draw_program_sms_template"
                android:inputType="textMultiLine"
                android:id="@+id/template_box"/>

        </android.support.design.widget.TextInputLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/content_padding_normal"
            android:layout_marginStart="@dimen/content_padding_normal"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_fname"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:id="@+id/insert_customer_name_img"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"/>

            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_total_spend"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:id="@+id/insert_customer_spend_img"
                android:layout_toRightOf="@+id/insert_customer_name_img"
                android:layout_toEndOf="@+id/insert_customer_name_img"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/insert_customer_spend_img"
                android:layout_toEndOf="@+id/insert_customer_spend_img"
                android:id="@+id/char_counter" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/reset_field"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/info_img"
                android:contentDescription="@string/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/info_img"
                android:id="@+id/customer_name_placeholder_guide"
                android:weightSum="3">
                <TextView
                    android:text="@string/customer_name_placeholder_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="3dp"/>
                <TextView
                    android:text="@string/customer_name_placeholder_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/customer_name_placeholder_guide"
                android:layout_marginTop="10dp"
                android:id="@+id/insert_customer_spend_placeholder_guide"
                android:weightSum="3">
                <TextView
                    android:text="@string/insert_customer_spend_placeholder_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="3dp"/>
                <TextView
                    android:text="@string/insert_customer_spend_placeholder_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="3dp"/>
            </LinearLayout>

        </RelativeLayout>

        <co.loystar.loystarbusiness.utils.ui.Buttons.BrandButtonNormal
            android:id="@+id/raffleCreateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/login_button_text_size" />

    </LinearLayout>

</ScrollView>
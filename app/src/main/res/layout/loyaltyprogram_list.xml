<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="co.loystar.loystarbusiness.activities.LoyaltyProgramListFragment"
    android:background="@color/colorPrimaryDarker"
    tools:mContext=".activities.LoyaltyProgramsListActivity">

    <co.loystar.loystarbusiness.utils.ui.RecyclerViewOverrides.EmptyRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/loyaltyprogram_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/activity_loyalty_programs_list_activity_empty_container"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/no_loyalty_programs"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <co.loystar.loystarbusiness.utils.ui.Buttons.BrandButtonNormal
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/activity_loyalty_programs_list_activity_add_program"
            android:text="@string/create_program"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="co.loystar.loystarbusiness.activities.AddNewCustomerActivity"
    tools:showIn="@layout/activity_add_new_customer">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">

            <co.loystar.loystarbusiness.utils.ui.Buttons.AddCustomerButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_customer_from_contacts"
                android:text="@string/add_customer_from_contacts"/>

            <LinearLayout
                android:id="@+id/add_from_contacts_bloc"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start"
                        />

                    <TextView
                        android:textAppearance="?android:textAppearanceMedium"
                        android:id="@+id/number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        />
                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:hint="@string/fname"
                            android:ems="10"
                            android:id="@+id/fname_from_contacts"
                            android:layout_gravity="start"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:hint="@string/lname"
                            android:ems="10"
                            android:id="@+id/lname_from_contacts"
                            android:layout_gravity="start"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <co.loystar.loystarbusiness.utils.ui.IntlPhoneInput.IntlPhoneInput
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/customer_phone_from_contacts" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/gender_txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/gender"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"/>
                    <RadioGroup
                        android:layout_toEndOf="@id/gender_txt_1"
                        android:layout_toRightOf="@+id/gender_txt_1"
                        android:id="@+id/gender_select_1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:id="@+id/male_1" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            android:id="@+id/female_1" />
                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/dob_header_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_birth"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginBottom="5dp"/>

                    <RelativeLayout
                        android:id="@+id/date_picker_bloc_1"
                        android:layout_below="@+id/dob_header_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <co.loystar.loystarbusiness.utils.ui.Buttons.SpinnerButton
                            android:id="@+id/select_date_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_date"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date_picker_bloc_1"
                        android:text="@string/birth_date_field_reason"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/divider_bloc"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <View style="@style/Divider"
                android:id="@+id/top_divider" />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/or_caps"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/add_customer_manually_bloc"
            android:layout_height="wrap_content">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fname_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="@string/fname"
                        android:ems="10"
                        android:id="@+id/fname"
                        android:layout_gravity="start"
                        android:imeOptions="flagNoExtractUi"
                        android:maxLines="1"
                        android:nextFocusUp="@id/fname"
                        android:nextFocusLeft="@id/fname"
                        android:nextFocusRight="@+id/lname"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lname_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="@string/lname"
                        android:ems="10"
                        android:id="@+id/lname"
                        android:layout_gravity="start"
                        android:imeOptions="flagNoExtractUi"
                        android:maxLines="1"
                        android:nextFocusRight="@+id/user_phone"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <co.loystar.loystarbusiness.utils.ui.IntlPhoneInput.IntlPhoneInput
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customer_phone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/user_email_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:ems="10"
                    android:id="@+id/user_email"
                    android:layout_gravity="start"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLines="1"
                    android:nextFocusRight="@+id/user_amount"/>

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/gender_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/gender"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <RadioGroup
                    android:layout_toEndOf="@id/gender_txt"
                    android:layout_toRightOf="@+id/gender_txt"
                    android:id="@+id/gender_select"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:id="@+id/male" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:id="@+id/female" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/dob_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginBottom="5dp"/>

                <RelativeLayout
                    android:id="@+id/date_picker_bloc"
                    android:layout_below="@+id/dob_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <co.loystar.loystarbusiness.utils.ui.Buttons.SpinnerButton
                        android:id="@+id/select_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_date"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_picker_bloc"
                    android:text="@string/birth_date_field_reason"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>

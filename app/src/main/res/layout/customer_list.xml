<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="co.loystar.loystarbusiness.activities.CustomerListFragment"
    tools:mContext=".activities.CustomerListActivity">

    <co.loystar.loystarbusiness.utils.ui.RecyclerViewOverrides.EmptyRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/customer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/customer_list_content"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/customer_list_empty_container"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/no_customers_found"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_height="wrap_content" />

        <co.loystar.loystarbusiness.utils.ui.Buttons.BrandButtonNormal
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/no_customer_add_customer_btn"
            android:text="@string/add_customer"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
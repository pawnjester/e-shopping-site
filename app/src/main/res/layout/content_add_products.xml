<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="co.loystar.loystarbusiness.activities.AddProductActivity"
    tools:showIn="@layout/activity_add_products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:contentDescription="@string/thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/thumbnail"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            style="@style/textViewLabelTextStyle" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:id="@+id/productName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:id="@+id/program_name_char_counter"/>


        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            style="@style/textViewLabelTextStyle"
            android:layout_marginTop="15dp" />

        <co.loystar.loystarbusiness.utils.ui.CurrencyEditText.CurrencyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/priceOfProduct" />

        <TextView
            android:id="@+id/productCategoryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_category"
            style="@style/textViewLabelTextStyle"
            android:layout_marginTop="15dp" />

        <co.loystar.loystarbusiness.utils.ui.SingleChoiceSpinnerDialog.SingleChoiceSpinnerDialog
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productCategoriesSelectSpinner"/>
    </LinearLayout>

</ScrollView>

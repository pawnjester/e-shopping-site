<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mb_main_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext=".activities.MerchantBackOffice"
    tools:showIn="@layout/activity_merchant_back_office">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_bar"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sales_overview"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/chart_card_view"
            android:layout_below="@+id/bar_title">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottom_bar_tabs" />

</RelativeLayout>
<resources>

    <!--Shareable attributes-->
    <attr name="backgroundDrawable" format="reference"/>
    <attr name="backGroundColor" format="color"/>
    <attr name="enableDefaultHint" format="boolean"/>
    <attr name="allowNegativeValues" format="boolean" />

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CurrencySearchableSpinner">
        <attr name="hintText" format="string"/>
    </declare-styleable>

    <declare-styleable name="CurrencyEditText">
        <attr name="enableDefaultHint" />
        <attr name="allowNegativeValues" />
        <attr name="formatWithTextFormatter" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="IncrementDecrementButton">
        <attr name="backGroundColor" />
        <attr name="initialNumber" format="integer"/>
        <attr name="finalNumber" format="integer" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="backgroundDrawable"/>
    </declare-styleable>

    <declare-styleable name="FullRectangleButton">
        <attr name="backGroundColor" />
    </declare-styleable>

    <declare-styleable name="FullRectangleImageButton">
        <attr name="backGroundColor" />
    </declare-styleable>

</resources>
